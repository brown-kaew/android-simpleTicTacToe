<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.example.tictactoe.MainViewModel"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical"
    >

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:padding="15dp"
                  android:text="@{viewModel.status}"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >
            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[0]}"
                    android:text="@string/tv_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv1"
            />
            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[1]}"
                    android:text="@string/tv_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv2"
            />
            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[2]}"
                    android:text="@string/tv_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv3"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[3]}"
                    android:text="@string/tv_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv4"
            />
            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[4]}"
                    android:text="@string/tv_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv5"
            />

            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[5]}"
                    android:text="@string/tv_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv6"
            />

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[6]}"
                    android:text="@string/tv_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv7"
            />
            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[7]}"
                    android:text="@string/tv_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv8"
            />
            <com.example.tictactoe.view.SquareTextView
                    style="@style/tvBtn"
                    android:onClick="@{(view)->viewModel.onTap(view)}"
                    android:enabled="@{viewModel.boardIsEnable[8]}"
                    android:text="@string/tv_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv9"
            />

        </LinearLayout>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET"
                android:layout_gravity="center"
                android:onClick="@{()->viewModel.reset()}"/>

    </LinearLayout>
</layout>